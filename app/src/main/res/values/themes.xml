<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Themplay" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/qprograming_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorPrimaryDark">@color/qprograming_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/main</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/light_text</item>
        <item name="cardBackgroundColor">@color/card_bg_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
        <item name="text_color_default">@color/light_text</item>
        <item name="text_color_white">@color/white</item>
        <item name="text_color_black">@color/black</item>
        <item name="text_color_blue">@color/qprograming_blue</item>
        <item name="text_color_green">@color/green_600</item>
        <item name="text_color_red">@color/red_600</item>
        <item name="text_color_yellow">@color/yellow_600</item>
        <item name="text_color_gray">@color/gray</item>
        <item name="text_color_violet">@color/deep_purple_500</item>
        <item name="card_background_color">@color/card_bg_light</item>
    </style>
</resources>